
<% if current_user %>
  <p> Hello, <%= current_user.name %></p>
<% end %>

<form action="/hikes" method="get">
  <button>Add a new hike</button>
</form>
<br>

<form action="/myhikes" method="get">
  <button>See my hikes</button>
</form>
<br>

<!-- shows all hikes created -->
<% @hikes.each do |hike| %>
  <p><%= hike.name %></p>
<% end %>

<ul>
  <% @users.each do |user| %>
    <li><%= user.name %> - <%= user.email %> - <%= user.password_digest %></li>
  <% end %>
</ul>

<form action="/logout" method="post">
  <input name="_method" value="Delete" type="hidden">
  <button>Logout</button>
</form>




