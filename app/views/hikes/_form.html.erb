<%= form_for @hike do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :distance %>
    <%= f.number_field :distance, :step => 'any' %>
  </div>

  <div>
    <%= f.label :difficulty %>
    <%= f.text_field :difficulty %>
  </div>

    <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

    <div>
    <%= f.label :directions %>
    <%= f.text_area :directions %>
  </div>

    <div>
    <%= f.label :poo_bags_available %>
    <%= f.select :poo_bags_available, options_for_select([["Select One", ""], "Yes", "No"]) %>
  </div>

    <div>
    <%= f.label :dogs_allowed_off_leash %>
    <%= f.select :dogs_allowed_off_leash, options_for_select([["Select One", ""], "Yes", "No"]) %>
  </div>

    <div>
    <%= f.label :trash_cans %>
    <%= f.select :trash_cans, options_for_select([["Select One", ""], "Yes", "No"]) %>
  </div>

  <div>
    <%= f.label :image %>
    <%= f.file_field :image%>
  </div>

  <%= f.submit class: 'btn btn-default' %>

<% end %>

